<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <link rel="stylesheet" href="style.css">
  <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">
  <title>Pagination</title>

  <style>
    table {
      text-align: center;
      width: 80%;
    }

    td {
      padding: 15px;
      border: 1px solid black;
      background-color: cadetblue;
    }

    th {
      color: white;
      padding: 15px;
      background-color: rgb(5, 58, 61);
    }

    th a i {
      font-weight: bolder;
    }

    th a {
      color: white;
    }

    .sec1 {
      text-align: center;
      background-color: lightblue;
    }

    .sec2 {
      width: 100%;
      margin: 0 auto;
    }
  </style>
</head>

<body>
 <%- include('paginate.ejs') %>
  <section class="sec2">
    <center>
      <table>
        <tr>
          <th><a href="/Pagination?sortby=asc&name=stud_id">Id</a></th>
          <th><a href="/Pagination?sortby=asc&name=firstname">FirstName <i class="bi bi-chevron-up fup"></i>
              <i class="bi bi-chevron-down"></i></a></th>
          <th><a href="/Pagination?sortby=asc&name=lastname">LastName <i class="bi bi-chevron-up fdown"></i>
              <i class="bi bi-chevron-down"></i></a></th>
          <th><a href="/Pagination?sortby=asc&name=rollno">Rollno</a></th>
          <th><a href="/Pagination?sortby=asc&name=dob">DOB</a></th>
          <th>Gender</th>
          <th><a href="/Pagination?sortby=asc&name=mobileno">Mobile No</a></th>
          <th>Email</th>
          <th>City</th>
          <th>State</th>
          <th>Postal_code</th>
        </tr>
        <% data.forEach(val=> { %>
        <tr>
          <td>
            <%= val.stud_id %>
          </td>
          <td>
            <%= val.firstname %>
          </td>
          <td>
            <%= val.lastname %>
          </td>
          <td>
            <%= val.rollno %>
          </td>
          <td>
            <%= val.dob %>
          </td>
          <td>
            <%= val.sex %>
          </td>
          <td>
            <%= val.mobileno %>
          </td>
          <td>
            <%= val.email %>
          </td>
          <td>
            <%= val.city %>
          </td>
          <td>
            <%= val.state %>
          </td>
          <td>
            <%= val.postal_code %>
          </td>
        </tr>

        <% }) %>
      </table>
    </center>
  </section>
  <script>
    if (oredrBY == 'asc') {
      document.getElementById('fup').style.color = 'black';
    } else {
      document.getElementById('fup').style.color = 'black';
    }
  </script>
</body>

</html>