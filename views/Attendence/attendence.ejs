<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Pagination</title>

  <style>
    table {
      text-align: center;
      width: 80%;
    }

    td {
      padding: 15px;
      border: 1px solid black;
      background-color: cadetblue;
    }

    th {
      color: white;
      padding: 10px;
      background-color: rgb(5, 58, 61);
    }

    .sec1 {
      text-align: center;
      background-color: lightblue;
    }

    .sec2 {
      width: 100%;
      margin: 0 auto;
    }
  </style>
</head>

<body>

  <section class="sec1">
    <h1>Name: Abhishek Zakhariya</h1>
    <h2>Task: Attendence_Grid</h2>
    <h2>Date: 29/02/2024</h2>
  </section>

  <%- include('paginate')%>
  <section class="sec2">
    <center>
      <table>
        <tr>
          <th>Student Id</th>
          <th>Student Name</th>
          <th>Days</th>
          <th>Records</th>
        </tr>

        <% let isEmpty %>
        <% res = data[0] %>
        <% if (res == undefined) { %>
        <% isEmpty = 'true' %>
        <% } %>

        <% data.forEach(val=> { %>
        <tr>
          <td>
            <%= val.stud_id %>
          </td>
          <td>
            <%= val.firstname%>
          </td>
          <td>
            <%= val.presentdays %>
          </td>
          <td>
            <%= val.percentage +' %' %>
          </td>
        </tr>
        <% }); %>
    </center>
  </section>
  <script>
    let empty = `<%- isEmpty %>`;
    console.log(empty);
    if (empty == true) {
      console.log("no data found");
    }
  </script>
</body>

</html>